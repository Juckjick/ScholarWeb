head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
  meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')

  title= appName + ' - ' +title
  meta(http-equiv='Content-type', content='text/html;charset=UTF-8')
  meta(name="keywords", content="node.js, express, mongoose, mongodb, angularjs")
  meta(name="description", content="Scholarship Management System")

  link(href='/img/icons/cu_icon.ico', rel='shortcut icon', type='image/x-icon')
  
  meta(property='og:title', content='#{appName} - #{title}')
  meta(property='og:description', content='Scholarship Management System (SMS)')
  meta(property='og:type', content='website')
  meta(property='og:url', content='APP_URL')
  meta(property='og:image', content='APP_LOGO')
  meta(property='og:site_name', content='#{appName}')
  meta(property='fb:admins', content='APP_ADMIN')


  //- Production environment, load minified files
  if (process.env.NODE_ENV === 'production')
    link(rel="stylesheet", href="/dist/css/lib.min.css")
    link(rel="stylesheet", href="/dist/css/sms.min.css")
    
  //- Development environment, load all files
  if (process.env.NODE_ENV === 'development')
    each cssPath in cssLibFiles
      link(rel='stylesheet', href='/#{cssPath}')

    //- Bootstrap and Custom styles
    link(rel='stylesheet', href='/css/sms.css')

