block variable
section(data-ng-controller=controller)
  h2
    block title
  hr
  div.row
    div.col-md-12
      form(role='form', name='form', method='post')
        block formField
          .row
            .form-group.col-sm-4
              label ปีการศึกษา
              .required-field-block
                select.form-control(name='graph-AcademicYear', data-ng-model='#{controllerAs}.filter.AcademicYear', data-ng-options='AcademicYear as AcademicYear.name for AcademicYear in #{controllerAs}.AcademicYears', validator='required', message-id='graph-AcademicYear')
                .required-icon
                  .text *
              span#graph-AcademicYear    
            .form-group.col-sm-4
              label ประเภททุนการศึกษา
              .required-field-block
                select.form-control(name='graph-budgetid', data-ng-model='#{controllerAs}.filter.Budget', data-ng-options='budget as budget.name for budget in #{controllerAs}.budgets | filter: #{controllerAs}.filterBudgets', data-ng-change='#{controllerAs}.filterSubBudgets()', validator='required', message-id='graph-budgetid')
                .required-icon
                  .text *
              span#graph-budgetid
            .form-group.col-sm-4
              label ประเภททุนการศึกษาย่อย
              .required-field-block
                select.form-control(name='graph-subbudgetid', data-ng-model='#{controllerAs}.filter.SubBudget', data-ng-options='subBudget as subBudget.name for subBudget in #{controllerAs}.subBudgets', validator='required', message-id='graph-subbudgetid')
                .required-icon
                  .text *
              span#graph-subbudgetid
          .row
            .form-group.col-sm-6
              label วันเริ่มต้น
              .input-group
                input.form-control(type='text', datepicker-popup='MM/yyyy', datepicker-options='{minMode: "month"}', datepicker-mode="'month'", data-ng-model='#{controllerAs}.filter.startDate', is-open='#{controllerAs}.openedStartDate', min-date='#{controllerAs}.minDate', current-text='วันนี้', clear-text='ลบ', close-text='ปิด', disabled)
                span.input-group-btn
                  button.btn.btn-default.btn-not-responsive(type='button', ng-click='#{controllerAs}.openStartDate($event)')
                    i.fa.fa-calendar
            .form-group.col-sm-6
              label วันสิ้นสุด
              .input-group
                input.form-control(type='text', datepicker-popup='MM/yyyy', datepicker-options='{minMode: "month"}', datepicker-mode="'month'", data-ng-model='#{controllerAs}.filter.endDate', is-open='#{controllerAs}.openedEndDate', min-date='#{controllerAs}.minDate', current-text='วันนี้', clear-text='ลบ', close-text='ปิด', disabled)
                span.input-group-btn
                  button.btn.btn-default.btn-not-responsive(type='button', ng-click='#{controllerAs}.openEndDate($event)')
                    i.fa.fa-calendar

        button.btn.btn-primary.pull-right(type='submit', data-ng-click='#{controllerAs}.find()', data-ng-disabled='#{controllerAs}.isSubmit', validation-submit='form')
          i.fa.fa-search
          | &nbsp;ค้นหาข้อมูล

        .clearfix          
        hr

      block graphs
